                <hide_when_no_map>false</hide_when_no_map>
                <pos_x>1280</pos_x>
                <pos_y>400</pos_y>
                <right_aligned>false</right_aligned>
                <size>11</size>
                <visible>false</visible>
            </sub2>
        </options>
        <padding>0</padding>
        <pos>
            <x>0</x>
            <y>-2</y>
        </pos>
        <text>
            <alpha>255</alpha>
            <blue>255</blue>
            <font>Consolas</font>
            <fonts>

            </fonts>
            <green>255</green>
            <red>255</red>
            <size>11</size>
            <stroke>
                <alpha>255</alpha>
                <blue>0</blue>
                <green>0</green>
                <red>0</red>
                <width>0</width>
            </stroke>
        </text>
    </global>
</settings>
