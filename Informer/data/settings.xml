        </bg>
        <colors>
            <alliance>158, 226, 255</alliance>
            <bad>255, 50, 50</bad>
            <dark>200, 30, 80</dark>
            <day>255, 255, 0</day>
            <dusk_dawn>170, 170, 0</dusk_dawn>
            <earth>250, 130, 40</earth>
            <fire>255, 0, 0</fire>
